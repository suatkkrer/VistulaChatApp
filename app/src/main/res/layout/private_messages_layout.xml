<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView


        android:id="@+id/message_profile_picc"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_person_black_24dp"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/receiver_message_text"
        android:text="receiver messages is here"
        android:layout_toRightOf="@+id/message_profile_picc"
        android:background="@drawable/receiver_messages_layout"
        android:layout_toEndOf="@+id/message_profile_picc"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="@android:color/black"

        android:layout_marginLeft="4dp"
        />

    <TextView
        android:id="@+id/sender_message_text"
        android:text="sender messages is here"
        android:background="@drawable/sender_message_layout"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="@+id/receiver_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:padding="8dp"
        android:textStyle="bold"
        android:textSize="13sp"
        />




</RelativeLayout>