<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_pic_visit"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="110dp"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:src="@drawable/ic_person_black_24dp"

        />

    <TextView

        android:id="@+id/username_visit"
        android:layout_below="@+id/profile_pic_visit"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textStyle="bold"
        android:text="Username"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView

        android:id="@+id/profile_status_visit"
        android:layout_below="@+id/username_visit"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:text="Profile Status"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/request_message_button"
        android:layout_below="@+id/profile_status_visit"
        android:layout_width="match_parent"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_height="wrap_content"
        android:text="Send Message Request"
        android:background="@drawable/buttons"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAllCaps="false"

        />

    <Button
        android:id="@+id/cancel_message_request"
        android:layout_below="@+id/request_message_button"
        android:layout_width="match_parent"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_height="wrap_content"
        android:text="Cancel Message Request"
        android:background="@drawable/buttons"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:visibility="invisible"

        />

</RelativeLayout>